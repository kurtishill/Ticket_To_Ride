<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bank_fragment">

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:text="@string/close_out_button"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:buttonStyle"
        android:id="@+id/bank_close_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_title"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/face_up_card_1"/>

            <android.support.v7.widget.CardView
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/face_up_card_2"/>

            <android.support.v7.widget.CardView
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/face_up_card_3"/>

            <android.support.v7.widget.CardView
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/face_up_card_4"/>

            <android.support.v7.widget.CardView
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/face_up_card_5"/>

            <android.support.v7.widget.CardView
                android:layout_width="75dp"
                android:layout_height="110dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/train_car_card_deck"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>