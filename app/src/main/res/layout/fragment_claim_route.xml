                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:id="@+id/purple_card_claim_route_layout">

                <ImageView
                    android:layout_width="40dp"
